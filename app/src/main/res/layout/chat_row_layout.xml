<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:baselineAligned="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/avatar"
            android:scaleType="centerCrop"
            android:contentDescription="@string/avatar"
            android:layout_alignParentStart="false"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:clickable="false" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textLayout"
            android:layout_toRightOf="@+id/avatar"
            android:layout_toLeftOf="@+id/optionLayout"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"
            android:paddingLeft="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/out_message_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/message"
                    android:id="@+id/textViewMessage" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/optionLayout"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:visibility="gone">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/likeViewButton"
                android:src="@drawable/like"
                android:scaleType="fitXY"
                android:contentDescription="@string/like"
                android:layout_alignParentEnd="false" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/dislikeViewButton"
                android:src="@drawable/dislike"
                android:contentDescription="@string/dislike"
                android:layout_alignParentEnd="false"
                android:scaleType="fitXY"
                android:layout_toRightOf="@+id/likeViewButton" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/buttonCorrect"
                android:layout_toRightOf="@+id/dislikeViewButton"
                android:contentDescription="@string/correctly"
                android:src="@android:drawable/star_big_on" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/optionLayout">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/likeView"
                android:src="@drawable/like"
                android:scaleType="fitXY"
                android:contentDescription="@string/like"
                android:layout_alignParentEnd="false"
                android:visibility="visible" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/dislikeView"
                android:src="@drawable/dislike"
                android:contentDescription="@string/dislike"
                android:layout_alignParentEnd="false"
                android:scaleType="fitXY"
                android:layout_toRightOf="@+id/likeView"
                android:visibility="visible" />


        </RelativeLayout>
    </RelativeLayout>



    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000" />

</LinearLayout>